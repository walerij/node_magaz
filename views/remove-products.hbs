<form action="/products/remove" method="POST">
  <div class="mb-3">
      <h2>Вы действительно хотите удалить этот продукт?</h2>
  </div>
  <div class="mb-3">
    <p>{{product.title}}</p>
    <p>{{product.price}}</p>
    <p>{{product.desc}}</p>
  </div>
  <div class="mb-3">
         <input type="hidden" name='id' value="{{product._id}}">
    <button class="btn btn-danger">Удалить</button>
    <a href="/products" title="Отменить удаление" class="btn btn-default">
        Отменить удаление
    </a>
  </div>
</form>